 TestDebugger.tabs(tabs+1, builder); builder.append("\""+entry.getKey()+"\": ");










 entry.getValue().write(builder, tabs+1);










 builder.append(",\n");










 }










 










 TestDebugger.tabs(tabs, builder); builder.append("}");










 }





















}




