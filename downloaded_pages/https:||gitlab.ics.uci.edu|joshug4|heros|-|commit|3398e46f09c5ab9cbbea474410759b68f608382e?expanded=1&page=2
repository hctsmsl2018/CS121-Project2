 assertEquals(NO_PREFIX, isPrefixOf(new Fact("a.f"), new Fact("a")));










 assertEquals(GUARANTEED_PREFIX, ap("").isPrefixOf(ap("f")));










 assertEquals(NO_PREFIX, ap("f").isPrefixOf(ap("")));










 }










 










